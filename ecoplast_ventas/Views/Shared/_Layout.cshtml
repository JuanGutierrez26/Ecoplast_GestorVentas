<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ecoplast_ventas</title>
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ecoplast_ventas.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sb-admin-2.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />

    @await RenderSectionAsync("EstiloDT", required: false)
</head>
<body>
    <header id="page-top">
        <!-- Page Wrapper -->
        <div id="wrapper">

            <!-- Sidebar -->
            <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

                <!-- Sidebar - Brand -->
                <a class="sidebar-brand d-flex align-items-center justify-content-center" href="index.html">
                    <div class="sidebar-brand-text mx-3" asp-area="" asp-controller="Home" asp-action="Index">EcoPlastic Solutions</div>
                </a>

                <!-- Divider -->
                <hr class="sidebar-divider my-0">

                <!-- Nav Item - Dashboard -->
                <li class="nav-item active">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-fw fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                <!-- Divider -->
                <hr class="sidebar-divider">

                <!-- Heading -->
                <div class="sidebar-heading">
                    Paginas
                </div>

                <!-- Nav Item - Ventas -->
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Venta" asp-action="Index">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Venta</span>
                    </a>
                </li>

                <!-- Nav Item - Clientes -->
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Cliente" asp-action="Index">
                        <i class="fas fa-users"></i>
                        <span>Cliente</span>
                    </a>
                </li>

                <!-- Nav Item - Proveedores -->
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Proveedor" asp-action="Index">
                        <i class="fas fa-truck"></i>
                        <span>Proveedor</span>
                    </a>
                </li>

                <!-- Nav Item - Productos -->
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Producto" asp-action="Index">
                        <i class="fas fa-box-open"></i>
                        <span>Producto</span>
                    </a>
                </li>

                <!-- Nav Item - Categorias -->
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Categoria" asp-action="Index">
                        <i class="fas fa-tags"></i>
                        <span>Categoria</span>
                    </a>
                </li>

                <!-- Nav Item - Empleados -->
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Empleado" asp-action="Index">
                        <i class="fas fa-id-card"></i>
                        <span>Empleado</span>
                    </a>
                </li>

                <!-- Nav Item - Marcas -->
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Marca" asp-action="Index">
                        <i class="fas fa-clipboard"></i>
                        <span>Marca</span>
                    </a>
                </li>

                <!-- Divider -->
                <hr class="sidebar-divider d-none d-md-block">

                <!-- Sidebar Toggler (Sidebar) -->
                <div class="text-center d-none d-md-inline">
                    <button class="rounded-circle border-0" id="sidebarToggle"></button>
                </div>

            </ul>
            <!-- End of Sidebar -->
            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                        <!-- Sidebar Toggle (Topbar) -->
                        <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                            <i class="fa fa-bars"></i>
                        </button>

                        <!-- Topbar Navbar -->
                        <ul class="navbar-nav ml-auto">

                            




                        </ul>

                    </nav>
                    <!-- End of Topbar -->
                    <!-- Begin Page Content -->
                    <div class="container-fluid">
                        @RenderBody()
                    </div>
                    <!-- /.container-fluid -->

                </div>
                <!-- End of Main Content -->
                <!-- Footer -->
                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>Copyright &copy; @DateTime.Now.Year EcoPlastic</span>
                        </div>
                    </div>
                </footer>
                <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery-easing/jquery.easing.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/sb-admin-2.min.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
